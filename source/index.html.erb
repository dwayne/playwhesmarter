<%= partial 'fb' %>

<header class="pws-header">
  <h1>Play Whe <span>Smarter</span></h1>
  <h2>The smarter way to play Play Whe</h2>
</header>

<div class="social-icons">
  <div class="social-icon social-icons__fb">
    <div class="fb-like" data-href="http://www.playwhesmarter.com/" data-send="false" data-layout="button_count" data-width="450" data-show-faces="false" data-font="arial"></div>
  </div>

  <div class="social-icon social-icons__twitter">
    <a href="https://twitter.com/playwhesmarter" class="twitter-follow-button" data-show-count="true">Follow @playwhesmarter</a>
    <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
  </div>
</div>

<div class="playwhe-results" ng-app="PlayWheSmarter" ng-controller="PlayWheResultsCtrl">
  <div class="playwhe-results__result">
    <div class="time-of-day" title="{{results[0].period | timeOfDay:true}}">{{results[0].period | timeOfDay}}</div>
    <div class="number" title="{{results[0].number | spirit}}">{{results[0].number}}</div>
    <div class="playwhe-results__result-footer">
      <div class="draw">Draw no. {{results[0].draw}}</div>
      <div class="date">{{results[0].date | prettyDate}}</div>
    </div>
  </div>
  <div class="playwhe-results__result">
    <div class="time-of-day" title="{{results[1].period | timeOfDay:true}}">{{results[1].period | timeOfDay}}</div>
    <div class="number" title="{{results[1].number | spirit}}">{{results[1].number}}</div>
    <div class="playwhe-results__result-footer">
      <div class="draw">Draw no. {{results[1].draw}}</div>
      <div class="date">{{results[1].date | prettyDate}}</div>
    </div>
  </div>
  <div class="playwhe-results__result">
    <div class="time-of-day" title="{{results[2].period | timeOfDay:true}}">{{results[2].period | timeOfDay}}</div>
    <div class="number" title="{{results[2].number | spirit}}">{{results[2].number}}</div>
    <div class="playwhe-results__result-footer">
      <div class="draw">Draw no. {{results[2].draw}}</div>
      <div class="date">{{results[2].date | prettyDate}}</div>
    </div>
  </div>
</div>

<footer class="pws-footer">
  <p><a href="" title="Coming Soon | View past results">Click here to view <em>every</em> Play Whe result that ever played</a></p>
  <p>Created by <a href="http://goo.gl/MW00k" target="_blank" title="Play Whe Smarter's Facebook Page">Play Whe Smarter</a></p>
</footer>
